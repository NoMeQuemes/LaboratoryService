<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="C:\Sites\LaboratoryService_Api\logs\temp\internal-nlog-AspNetCore.txt">

	<!-- Habilitar los targets de ASP.NET Core -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<targets>
		<!--~~~~~~~~~~~~~~~~~~~~~~ Loggers en producción ~~~~~~~~~~~~~~~~~~~~~~-->
		<!-- Logs generales -->
		<target xsi:type="File"
				name="allfile"
				fileName="C:\Sites\LaboratoryService_Api\logs\nlog-AspNetCore-all-${shortdate}.log"
				layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" 
				archiveEvery="Day"
				maxArchiveFiles="7"
        		keepFileOpen="false"
        		concurrentWrites="true"
				/>

		<!-- Logs de errores e información sobre ASP.NET CORE -->
		<target xsi:type="File"
				name="ownFile-web"
				fileName="C:\Sites\LaboratoryService_Api\logs\nlog-AspNetCore-own-${shortdate}.log"
				layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}"
				archiveEvery="Day"
				maxArchiveFiles="7"
        		keepFileOpen="false"
        		concurrentWrites="true"
				/>
		<!-- Mensajes recibidos en TcpServer -->
		<target xsi:type="File"
				name="tcpServer"
				fileName="C:\Sites\LaboratoryService_Api\logs\tcpServer-${shortdate}.log"
				layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
				archiveEvery="Day"
				maxArchiveFiles="7"
        		keepFileOpen="false"
        		concurrentWrites="true"
				/>
	</targets>

	<rules>
		<!-- Loggs específicos de un servicio -->
		<logger name="LaboratoryService_Api.Utilities.TcpServer" minlevel="Trace" writeTo="tcpServer" />

		<!-- Todos los logs, incluyendo del framework -->
		<logger name="*" minlevel="Trace" writeTo="allfile" />

		<!-- Logs personalizados -->
		<logger name="Microsoft.*" maxlevel="Info" final="true" />
		<logger name="*" minlevel="Trace" writeTo="ownFile-web" />
	</rules>
</nlog>